
{

  "description": "A plugin that glitches a whole website into a single black cross.",
  "manifest_version": 2,
  "name": "black cross",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],

  "icons": {
    "48": "icons/malevich_black_cross_48.jpg"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/malevich_black_cross_16.jpg",
      "32": "icons/malevich_black_cross_32.jpg"
    }
  }

}